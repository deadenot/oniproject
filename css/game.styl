html, body
    overflow: hidden;
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;

#bottom
    position:absolute;
    bottom:0;
    width:100%;

#spell-over
    background: url("/ui/spell-bar-over.png");
    height: 44px;
    width: 364px;
    position: absolute;
    top:0;
    left:0;

#spells
    margin:auto;
    width:340px;
    background: url("/ui/spell-bar-bg.png");
    font-size: 0;
    padding: 4px 1px;
    height: 44px;
    width: 364px;
    box-sizing: border-box;
    position: relative;


    .img
        position: relative;
        display: inline-block;
        width:32px;
        height:32px;
        margin: 2px;

    .img:hover .img-over
        background: no-repeat url("/ui/spell-bar-glass.png");
        width: 32px;
        height: 32px;
        position: absolute;
        top: 1px;
        left: 0px;

    img
        margin:0;
        width:32px;
        height:32px;

    .img .text
        position: absolute;
        display: none;
        top: 0;
        bottom: 0;
        z-index: 999;
        background: red;

    .img:hover .text
        display: block;


#chat
    position: absolute;
    bottom: 0.5em;
    width: 300px;
    color: white;

    input
        background: rgba(120, 0, 0, 0.3);
        border: none;
        width: 100%;
        color: white;

    ul
        list-style: none;
        padding: 0;
        margin: 0;
        background: rgba(255, 255, 255, 0.1);
        width: 100%;

    .local
    .admin
        font-weight: bold;
        color: #c00;
    .party
        font-weight: bold;
    .guild
        color: #0f0;


#exp
    width:100%;
    background: black;
    div
        background: silver;
        height: 7px;


#top-left
    position:absolute;
    padding: 3px;


#hudMap
    background: #534741;
    /*background: green;*/
    top: 5px;
    left: 5px;
    width: 82px;
    height: 82px;
    position: absolute;
    border-radius: 9999999px;

    padding: 19px;
    font-size: 40px;
    font-family: Impact;
    text-aligin: center;
    color: white;
    box-sizing: border-box;


#hud
    background: url("/ui/hud-bg.png");
    width: 223px;
    height: 86px;
    position: relative;

    .hud-bar
        width: 119px;
        height: 9px;
        position: absolute;
        div
            height: 9px;
            transition: .4s ease;
            transition: 1.1s linear;


#hudHP
    top: 14px;
    left: 84px;
    div
        background: url("/ui/hp-bar.png");


  #hudMP
    top: 28px;
    left: 84px;
    div
        background: url("/ui/mp-bar.png");

#hudSP
    top: 28px;
    left: 84px;
    div
        background: url("/ui/sp-bar.png");


#top-center
    position:absolute;
    width: 30%;
    right: 35%;
    left: 35%;
    text-align: center;
    background: #ccf;
    .points
        width: 100%;

#top-right
    position:absolute;
    padding: 3px;
    right: 0;
    color: white;
    background: #332;

.level
    float:left;
    color: white;
    font-size: 20px;
    font-weight: bold;
    background: blue;
    color: white;
    padding: 7px;
    border-radius:20px 6px 20px 20px;
    border: 2px solid silver;

.bars
    float:right;

.points
    width:200px;
    border-radius:6px;
    border: 1px solid black;
    background: silver;
    margin: 2px 0;
    box-sizing: border-box;

    div
        height: 7px;
        border-radius:6px;
        transition: .4s ease;
        transition: 1.1s linear;
    &.hp div
        background: red;
    &.mp div
        height: 4px;
        background: blue;
    &.tp div
        height: 4px;
        background: yellow;




.window
    width: 274px;
    height: 424px;
    background: url("/ui/win-bg.png");
    position: absolute;
    font-family: Impact;
    text-shadow: 1px 1px 1px black;
    color: white;

    .close
        position: absolute;
        top: 0px;
        left: 241px;
        width: 28px;
        height: 27px;
        &:hover
            background: url("/ui/win-close.png");

    .title
        text-align: center;
        width: 100px;
        position: absolute;
        top: 10px;
        left: 88px;

    .scrollbar
        background: url("/ui/scrollbar-bg.png");
        position: absolute;
        top: 49px;
        right: 5px;
        width: 22px;
        height: 362px;

        .up, .down, .slider
            position: absolute;
            width: 16px;
            height: 16px;
            left: 3px;

        .up
            background: url("/ui/scrollbar-up.png");
            top: 2px;
        .up:hover
            background: url("/ui/scrollbar-up-hover.png");


        .down
            background: url("/ui/scrollbar-down.png");
            bottom: 2px;
        .down:hover
            background: url("/ui/scrollbar-down-hover.png");


        .slider
            background: url("/ui/scrollbar-slider.png");
            bottom: 50px;


    .btn
        background: url("/ui/btn.png");
        width: 90px;
        height: 29px;
        font-size: 14px;
        text-align: center;
        border: 0;
        padding: 0;
        margin: 0;
        padding-bottom: 4px;
        font-family: Impact;
        text-shadow: 1px 1px 1px black;
        color: white;

        &:hover
            background: url("/ui/btn-hover.png");
        &:disabled
            background: url("/ui/btn-disabled.png");
        &:active
            background: url("/ui/btn-active.png");

    .content
        color: white;
        position: absolute;
        top: 50px;
        left: 7px;
        width: 261px;
        height: 363px;
        overflow: hidden;
        box-sizing: border-box;

        &.red
            background: url("/ui/win-red.png");
            font-family: sans;

        &.yellow
            background: url("/ui/win-yellow.png");
            font-family: sans;


    .content.paper
        background: no-repeat url("/ui/win-paper.png");
        font-family: sans-serif;
        padding: 45px 35px 40px 10px;
        position: relative;
        color: #46290e;
        box-shadow: none;

        .sello
            position: absolute;
            top: 10px;
            left: 82px;
            width: 87px;
            height: 42px;
            &.red
                background: url("/ui/sello-red.png");
            &.blue
                background: url("/ui/sello-blue.png");

