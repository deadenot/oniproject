<!-- CANVAS -->
<div id="canvas" style="position: absolute;" class="uk-width-1-1 uk-height-1-1"></div>

<div style="position: absolute;" class="uk-grid uk-grid-small uk-height-1-1 uk-width-1-1 uk-margin-remove">
<!-- OBJECT -->
	<div class="uk-width-2-10 uk-width-large-1-10 uk-height-1-1">
		<br/><br/>
		<div class="uk-panel uk-panel-box">
		<h5 id="obj">Select any object</h5>
		<form id="pos" class="uk-form">
			<fieldset>
				<legend>Position</legend>

				<div class="uk-form-row">
					<input data-uk-tooltip="{pos:'right'}" title="X" v-model="x" id="x" class="uk-width-1-1 uk-form-small" type="number">
					<input data-uk-tooltip="{pos:'right'}" title="Y" v-model="y" id="y" class="uk-width-1-1 uk-form-small" type="number">
					<input data-uk-tooltip="{pos:'right'}" title="Z" v-model="z" id="z" class="uk-width-1-1 uk-form-small" type="number">

					<a id="Move" v-on="click: move" class="uk-button uk-button-primary uk-width-1-1"><i class="uk-icon-arrows"></i></a>
				</div>
			</fieldset>
		</form>

		<form id="size" class="uk-form">
			<fieldset>
				<legend>Size</legend>

				<div class="uk-form-row">
					<input data-uk-tooltip="{pos:'right'}" title="X" v-model="x" id="x" class="uk-width-1-1 uk-form-small" type="number">
					<input data-uk-tooltip="{pos:'right'}" title="Y" v-model="y" id="y" class="uk-width-1-1 uk-form-small" type="number">
					<input data-uk-tooltip="{pos:'right'}" title="Z" v-model="z" id="z" class="uk-width-1-1 uk-form-small" type="number">

					<input data-uk-tooltip="{pos:'right'}" title="Vertices" v-model="v" id="v" class="uk-width-1-1 uk-form-small" type="number">

					<a id="Resize" v-on="click: resize" class="uk-button uk-button-primary uk-width-1-1"><i class="uk-icon-expand"></i></a>
				</div>
			</fieldset>
		</form>

		<form id="rotateZ" class="uk-form">
			<fieldset>
				<legend>Rotate</legend>

				<div class="uk-form-row">
					<input data-uk-tooltip="{pos:'right'}" title="Yaw" v-model="yaw" id="yaw" value="0" class="uk-width-1-1 uk-form-small" type="number">

					<a id="Rotate" v-on="click: rotate" class="uk-button uk-button-primary uk-width-1-1"><i class="uk-icon-undo"></i></a>
				</div>
			</fieldset>
		</form>

		<form id="color" class="uk-form">
			<fieldset>
				<legend>Color</legend>

				<div class="uk-form-row">
					<input data-uk-tooltip="{pos:'right'}" title="Color" v-model="color" id="hex-color" value="#000000" class="uk-width-1-1 uk-form-small" type="color">
					<input data-uk-tooltip="{pos:'right'}" title="Alpha" v-model="alpha" id="alpha" value="1" class="uk-width-1-1 uk-form-small" type="number">

					<a id="SetColor" v-on="click: setColor" class="uk-button uk-button-primary uk-width-1-1">SetColor</a>
				</div>
			</fieldset>
		</form>
		</div>

	</div>
<!-- HACK -->
	<div class="uk-width-3-10 uk-width-large-7-10 uk-height-1-1"></div>
<!-- OBJECTS LIST -->
	<div class="uk-width-3-10 uk-width-large-2-10 uk-height-1-1">
